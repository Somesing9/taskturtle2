<div class="row">
  <div class="col-md-6">
    <h2>Create a Job</h2>
    <form id="job" method="POST" action="/jobs">
      <div class="form-group">
        <label for="title">Title</label>
        <input class="text" name="title" type="text" />
      </div>
      <div class="form-group">
        <label for="description">Job Description</label>
        <input name="description" type="text" />
      </div>
      <button type="submit" class="btn btn-default">Submit</button>
    </form>
  </div>
  <div class="col-md-6">
    <h3>Job Listings</h3>
    <table class="table">
      <thead>
        <tr>
          <th>Job Title</a></th>
          <th>Job Description</th>
        </tr>
      </thead>
      <tbody>
        {{#each jobs}}
          <tr>
            <td><a href="/jobs/{{id}}">{{title}}</a></td>
            <td>{{description}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>