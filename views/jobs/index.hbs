<div class="row">
  <div class="col-md-6">
    <h3>Job Listings</h3>
    <table class="table">
      <thead>
        <tr>
          <th>Job Title</a>
          </th>
          <th>Job Description</th>
          <th>Add Bid</th>
        </tr>
      </thead>
      <tbody>
        {{#each jobs}}
          <tr>
            <td><a href="/jobs/{{id}}">{{title}}</a></td>
            <td>{{description}}</td>
            <td></td>
          </tr>
        {{/each}}
      </tbody>
    </table>
  </div>
</div>
<div class="row">
  <div class="col-md-6">
    <h3>Job Listings</h3>
    <ul>
      {{#each jobs}}
        <li><a href="/jobs/{{id}}">{{title}}</a> {{description}}
          <form id="job" method="POST" action="/jobs/{{id}}/bids">
            <div class="form-group">
              <label for="amount">Bid</label>
              <input class="text" name="amount" type="text" />
            </div>
            <button type="submit" class="btn btn-default">Submit</button>
          </form>
        </li>
      {{/each}}
    </ul>
  </div>
</div>