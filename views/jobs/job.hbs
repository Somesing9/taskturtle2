<div class="row">
  <h3>Job Title: {{job.title}}</h3>
  <p>Description: {{job.description}}</p>
</div>
<div class="row">
  <h3>Add a Bid</h3>
  <form id="job" method="POST" action="/jobs/{{job.id}}/bids">
    <div class="form-group">
      <label for="amount">Bid</label>
      <input class="text" name="amount" type="text" />
    </div>
    <button type="submit" class="btn btn-default">Submit</button>
  </form>
</div>
<div class="row"></div>
<p>Bids</p>
<ul>
  {{#each bids}}
    <li>{{amount}}
  {{/each}}
</ul>
</div>